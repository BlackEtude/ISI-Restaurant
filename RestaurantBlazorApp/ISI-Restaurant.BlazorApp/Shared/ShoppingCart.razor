@using ISI_Restaurant.Shared.Models

<div class="cart-item">
    <a @onclick="OnProductRemoved" class="delete-item">x</a>
    <div class="title">@Pizza.Product.Name (@(Pizza.Size)cm)</div>
    <ul>
        @foreach (var topping in Pizza.Toppings)
        {
            <a @onclick="@(() => OnToppingRemoved.InvokeAsync(@topping))" class="delete-topping">x</a>
            <li>+ @topping.Name</li>
        }
    </ul>
    <div class="item-price">
        @Pizza.GetFormattedTotalPrice()
    </div>
</div>

@code {
    [Parameter] public OrderItem Pizza { get; set; }
    [Parameter] public EventCallback OnProductRemoved { get; set; }
    [Parameter] public EventCallback<Topping> OnToppingRemoved { get; set; }
}